<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal|bottom"
    android:layout_marginBottom="32dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:background="@drawable/bottom_nav_background"
    android:elevation="8dp"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">

    <!-- Home Tab -->
    <FrameLayout
        android:id="@+id/tab_home"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/tab_background_active"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/icon_home"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/home"
            app:tint="@color/tab_icon_tint" />

        <View
            android:id="@+id/indicator_home"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="2dp"
            android:background="@drawable/active_indicator"
            android:visibility="visible"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/tab_cart"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/tab_background_inactive"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/icon_cart"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/cart"
            app:tint="@color/tab_icon_tint"/>

        <View
            android:id="@+id/indicator_cart"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="2dp"
            android:background="@drawable/active_indicator"
            android:visibility="invisible" />
    </FrameLayout>

    <!-- Heart Tab -->
    <FrameLayout
        android:id="@+id/tab_heart"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/tab_background_inactive"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/icon_heart"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            app:tint="@color/tab_icon_tint"
            android:src="@drawable/heart"/>

        <View
            android:id="@+id/indicator_heart"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="2dp"
            android:background="@drawable/active_indicator"
            android:visibility="invisible" />
    </FrameLayout>

    <!-- Profile Tab -->
    <FrameLayout
        android:id="@+id/tab_profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/tab_background_inactive"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/icon_profile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:tint="@color/tab_icon_tint"
            android:layout_gravity="center"
            android:src="@drawable/profile"/>

        <View
            android:id="@+id/indicator_profile"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="2dp"
            android:background="@drawable/active_indicator"
            android:visibility="invisible" />
    </FrameLayout>

</LinearLayout>