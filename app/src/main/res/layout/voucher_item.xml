<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/voucher_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_voucher_ticket"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <!-- Voucher Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Code -->
        <TextView
            android:id="@+id/tv_voucher_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME200"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <!-- Condition -->
        <TextView
            android:id="@+id/tv_voucher_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add items worth $2 more to unlock"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginTop="4dp"/>

        <!-- Discount Info -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_discount"  />

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Get 50% OFF"
                android:textSize="16sp"
                android:textColor="#6D4C41"
                android:textStyle="bold"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/btn_copy_code"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="@drawable/edittext_rounded_border"
        android:text="COPY CODE"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginTop="0dp"/>
</LinearLayout>
