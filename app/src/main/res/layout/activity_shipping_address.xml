<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:src="@mipmap/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping Address"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <!-- List of Addresses -->
    <RadioGroup
        android:id="@+id/radioGroupAddresses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp">

        <!-- Address Item 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp">

            <ImageView
                android=""
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_location" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1901 Thornridge Cir. Shiloh, Hawaii 81063"
                    android:textSize="13sp"
                    android:textColor="#888888"/>
            </LinearLayout>

            <RadioButton
                android:id="@+id/radioHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#8B5C2A"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEE"/>

        <!-- Address Item 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_location" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Office"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4517 Washington Ave. Manchester, Kentucky 39495"
                    android:textSize="13sp"
                    android:textColor="#888888"/>
            </LinearLayout>

            <RadioButton
                android:id="@+id/radioOffice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#8B5C2A"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEE"/>

        <!-- Address Item 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_location" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parent's House"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8502 Preston Rd. Inglewood, Maine 98380"
                    android:textSize="13sp"
                    android:textColor="#888888"/>
            </LinearLayout>

            <RadioButton
                android:id="@+id/radioParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#8B5C2A"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEE"/>

        <!-- Address Item 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_location" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friend's House"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2464 Royal Ln. Mesa, New Jersey 45463"
                    android:textSize="13sp"
                    android:textColor="#888888"/>
            </LinearLayout>

            <RadioButton
                android:id="@+id/radioFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#8B5C2A"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        </LinearLayout>
    </RadioGroup>

    <!-- Add New Shipping Address Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_add_address_dashed"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Add New Shipping Address"
            android:textColor="#8B5C2A"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Apply Button -->
    <Button
        android:id="@+id/btnApply"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Apply"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/bg_signin_button_round"
        android:layout_marginBottom="8dp"/>

</LinearLayout>